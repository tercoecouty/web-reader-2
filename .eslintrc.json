{
    "root": true,
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
        "plugin:react/recommended",
        // "plugin:react-hooks/recommended",
        "prettier"
    ],
    "rules": {
        "react/react-in-jsx-scope": "off"
    },
    "env": {
        "browser": true
    }
}
